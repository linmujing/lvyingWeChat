/* components/bindphone/bindphone.wxss */
/* 1个像素的线条 */
.border_top_1px,.border_bottom_1px{
    position: relative;
}
.border_top_1px:before,.border_bottom_1px:before{
    content: '';
    position: absolute;
    right: 0;
    bottom: 0;
    left: 0;
    height: 1px;
    -webkit-transform: scaleY(.3);
    transform: scaleY(.3);
    background-color: #ddd;
}
.ml20{
  margin-left:20rpx; 
}
.flex{
  display: flex;
}
.btn_title{
  box-sizing: border-box;
  display: inline-block;
  height: 46rpx;
  line-height: 40rpx;
  padding: 0 30rpx;
  background: #00b088;
  border-radius: 25rpx;
  color: #fff;
  border:1px solid #00b088;
  font-size: 22rpx;
}

/* 确认授权 */
.mask{
  position: fixed;
  top:0;
  width:100%;
  height:100%;
  background: rgba(0,0,0,0.5);
  z-index:9999;
}
.model{
  position: absolute;
  width: 550rpx;
  height:600rpx;
  top:0;
  bottom:0;
  left:0;
  right:0;
  margin: auto;
  background:#fff;
  border-radius: 4px;
}
.title{
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
}
.close{
  position: absolute;
  font-size: 100rpx;
  bottom:10%;
  left: 0;
  width:100%;
  text-align: center;
  color:#fff;
}
.input_box{
  line-height: 90rpx;
}
.input_box .left{
  width:120rpx;
}
.input_box input{
  width:250rpx;
  height:60rpx;
  padding-top: 15rpx;
}