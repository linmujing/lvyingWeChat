/* 确认授权 */
.mask{
  position: fixed;
  top:0;
  width:100%;
  height:100%;
  background: rgba(0,0,0,0.5);
  z-index:9999;
}
.model{
  position: absolute;
  width: 500rpx;
  height:300rpx;
  top:0;
  bottom:0;
  left:0;
  right:0;
  margin: auto;
  background:#fff;
  border-radius: 4px;
}
.model_title{
  height:200rpx;
  padding:30rpx;
  text-align: left;
  font-size:24rpx;
  line-height: 50rpx;
}