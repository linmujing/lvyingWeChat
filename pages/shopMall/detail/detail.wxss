/* 弹窗样式 */
.modal-box{
  position:fixed;
  width:100%;
  height:100%;
  top:0px;
  overflow: hidden;
  }

.modal-body{
  position:relative;
  width:100%;
  height:100%;
  }

.modal-content{
  position: absolute;
  left: 0;
  bottom: 0;
  overflow: scroll;
  width:100%;
  max-height: 800rpx;
  background: #fff;
}
.modal-mask{
  position: absolute;
  bottom: 0;
  left: 0;
  width:100%;
  height:100%;
  background:rgba(0,0,0,0.4);
}
