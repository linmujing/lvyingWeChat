view{
      box-sizing:  border-box;
}
.container {
      width: 100%;
      overflow: hidden;
}
.video-box{
      width:  100%;
      height: 440rpx;
}
video{
      width:  100%;
      height:  100%;
}
.sub-title{
      margin-top:  50rpx;
      padding-left: 20rpx; 
}
.chapter{
      margin-right:  20rpx;
}
.chapter{
      font-size:  34rpx;
}
.chapter-name{
      font-size:  30rpx;
}
.item{
      width: 100%;
      height: 80rpx;
      line-height: 72rpx;
      background: rgba(241, 237, 237, 0.945);
      margin: 20rpx 0;
      display: flex;
      justify-content: space-between;
}
.number{
      margin-left: 26rpx;
      margin-right: 20rpx;
}
.item text{
      font-size:  28rpx;
}
.item button, startp{
      padding:0 20rpx 0 20rpx;
      margin: 0 30rpx  0  60rpx;
      display: inline-block;
      height:48rpx;
      line-height:48rpx;
      color: #fff;
      background: #F09105;
      font-size: 28rpx;
      border-radius:60rpx;
      vertical-align: middle;
}
/* 音频 */
.bg{
      width:  100%;
}
.audio {
    position: relative;
    width: 750rpx;
    height: 400rpx;
    /* padding: 60rpx 32rpx 52rpx; */
    box-sizing: border-box;
    text-align: center;
    overflow: hidden;
    
}
.audio .bg {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    margin: auto;
    width: 100%;
    height: 100%;
    z-index: -1;
    /* filter: blur(40rpx); */
}
.audio .poster {
    width: 238rpx;
    height: 200rpx;
}
.icon-list{
      width: 70rpx;
      height: 70rpx;
}
.audio .icon-list .pattern {
    position: absolute;
    right: 20rpx;
}
.audio .icon-list {
    margin: 0 auto;
}
/* 音频滚动条start */
.control-process {
    width: 100%;
    position: absolute;
    bottom: 0;
    left: 0;
    padding:0 20rpx;
    background: rgba(0,0,0,.18);
}
.control-process .slider {
    width: 100%;
}
.control-process text {
    font-size: 24rpx;
    color: #fff;
}