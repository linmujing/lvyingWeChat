view{
      box-sizing:  border-box;
}
.container {
      width: 100%;
      overflow: hidden;
}
.video-box{
      width:  100%;
      height: 440rpx;
}
video{
      width:  100%;
      height:  100%;
}
.sub-title{
      margin-top:  50rpx;
      padding-left: 20rpx; 
}
.chapter{
      margin-right:  20rpx;
}
.chapter{
      font-size:  34rpx;
}
.chapter-name{
      font-size:  30rpx;
}
.item{
      width: 100%;
      height: 80rpx;
      line-height: 72rpx;
      background: rgba(241, 237, 237, 0.945);
      margin: 20rpx 0;
      display: flex;
      justify-content: space-between;
}
.number{
      margin-left: 26rpx;
      margin-right: 20rpx;
}
.item text{
      font-size:  28rpx;
}
.item button{
      padding:0 20rpx 0 20rpx;
      margin: 0 30rpx  0  60rpx;
      display: inline-block;
      height:48rpx;
      line-height:48rpx;
      color: #fff;
      background: orange;
      font-size: 28rpx;
      border-radius:60rpx;
      vertical-align: middle;
}